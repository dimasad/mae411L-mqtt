{
  "name": "mae411l-mqtt-dashboard",
  "version": "1.0.0",
  "description": "MQTT dashboard for Advanced Mechatronics course (MAE 411L) at West Virginia University",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "python3 -m http.server 8080",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix"
  },
  "keywords": [
    "mqtt",
    "dashboard",
    "temperature",
    "iot",
    "real-time"
  ],
  "author": "MAE 411L Course",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "mqtt": "^5.3.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testPathIgnorePatterns": ["tests/mqtt-real.test.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "projects": [
      {
        "displayName": "unit",
        "testMatch": ["<rootDir>/tests/*.test.js"],
        "testPathIgnorePatterns": ["tests/mqtt-real.test.js", "tests/integration.test.js", "tests/simple-integration.test.js"],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
      },
      {
        "displayName": "integration",
        "testMatch": ["<rootDir>/tests/mqtt-real.test.js"],
        "testEnvironment": "node"
      }
    ]
  }
}